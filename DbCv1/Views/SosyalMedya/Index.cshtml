@using DbCv1.Models.Entity
@model List<TblSosyalMedya>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Content Header (Page header) -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">

                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button class="btn btn-primary mb-2" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>
                                <table class="table table-bordered table-striped ">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th class="col-10">Sosyal Medya</th>
                                            <th class="">Durum</th>
                                            <th class="col-1">Sil</th>
                                            <th class="col-1">Düzenle</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {

                                        <tbody>





                                            <tr>




                                                <td>@item.ID</td>
                                                <td>@item.Ad</td>
                                                <td class="">@item.Durum</td>



                                                <td>
                                                    <a class="btn btn-danger col" href="/SosyalMedya/Sil/@item.ID">
                                                        Sil
                                                    </a>
                                                </td>

                                                <td><a href="/SosyalMedya/SosyalMedyaDüzenle/@item.ID" class="btn btn-primary">Düzenle</a></td>

                                            </tr>


                                        </tbody>
                                    }
                                </table>
                            </div>


                        </div>

                    </div>

                </div>

            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>

    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Yeni Sosyal Medya Hesabı Ekleme Paneli</h2>
                    
                   
            </div>
                <form method="post" action="/SosyalMedya/Ekle">
                    <div class="modal-body">
                        <label> Sosyal Medya İsmi</label>
                        <input type="text" name="Ad" class="form-control" />
                        <br />
                        <label> Sosyal Medya Linki</label>
                        <input type="text" name="Link" class="form-control" />
                        <br />
                        <label>İkon Değeri</label>
                        <input type="text" name="Icon" class="form-control" />
                        <br />
                        <button class="btn btn-info">Ekle</button>
                    </div>
                </form>
        </div>
    </div>

    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../../dist/js/demo.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</body>
