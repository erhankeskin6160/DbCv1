@using DbCv1.Models.Entity
@model List<TblSertfikalarım>  

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<!DOCTYPE html>
<div><html>
 
<body class="hold-transition sidebar-mini">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        
                        <!-- /.col -->
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header p-2">
                                    
                                </div><!-- /.card-header -->
                                <div class="card-body">

                                   
                                        <div class="container">
                                            <a href="/Sertifika/SertifikaEkle" class="btn btn-info mb-2 col-12 " style="margin:4px;">Sertifika Ekle</a>
                                        </div>
                                     
                                    <!-- /.tab-pane -->
                                    <div class="tab-pane" id="timeline">
                                        <!-- The timeline -->
                                        <div class="timeline timeline-inverse">


                                            @foreach (var item in Model)
                                            {





                                                <div class="time-label">
                                                    <a href="/Sertifika/SertifikaGetir/@item.Id" class="btn btn-success"> @item.Tarih</a>


                                                </div>

                                                <div>


                                                    <div class="timeline-item">
                                                        <span class="time"><i class="far fa-clock"></i> 12:05</span>



                                                        <div class="timeline-body">
                                                            @item.Aciklama
                                                        </div>

                                                        <div class="timeline-footer">
                                                            <a href="~/Sertifika/SertifikaDüzenle/@item.Id" class="btn btn-primary btn-sm">Düzenleme</a>
                                                            <a href="/Sertifika/SertifikaSil/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                                        </div>
                                                    </div>


                                                </div>
                                            }
                                        </div>

                                        <!-- /.row -->
                                        <!-- /.container-fluid -->
</section>
</body>
</html></div>
